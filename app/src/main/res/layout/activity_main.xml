<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    tools:context="m.unihackmini.MainActivity"
    android:background="#FFFFFF"
    android:clickable="false">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BROWSE"
        android:id="@+id/button"
        android:background="#199600"
        android:textColor="#FFF"
        android:textSize="72dp"
        android:typeface="monospace"
        android:onClick="viewRestroomList"
        android:shadowColor="#FFFFFF"
        android:singleLine="true"
        android:elegantTextHeight="false"
        android:elevation="20dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ADD"
        android:id="@+id/button2"
        android:background="#233de2"
        android:textColor="#FFFFFF"
        android:textSize="72dp"
        android:typeface="monospace"
        android:shadowColor="#FFFFFF"
        android:singleLine="true"
        android:elegantTextHeight="false"
        android:layout_below="@+id/button"
        android:clickable="true"
        android:onClick="viewAddRestroom"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MAP"
        android:id="@+id/button3"
        android:background="#d71c1c"
        android:textColor="#FFFFFF"
        android:textSize="72dp"
        android:typeface="monospace"
        android:shadowColor="#FFFFFF"
        android:singleLine="true"
        android:elegantTextHeight="false"
        android:layout_below="@+id/button2"
        android:onClick="viewMap"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
